{% extends 'base.html.twig' %}

{% block title %}Campaign{% endblock %}

{% block body %}
<h1>{{ campaign.title }}</h1>
<div class="parallax-container valign-wrapper">
    <div class="section no-pad-bot">
        <div class="container">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ campaign.id }}</td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <td>{{ campaign.title }}</td>
                    </tr>
                    <tr>
                        <th>Content</th>
                        <td>{{ campaign.content }}</td>
                    </tr>
                    <tr>
                        <th>CreatedAt</th>
                        <td>{{ campaign.createdAt ? campaign.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>UpdatedAt</th>
                        <td>{{ campaign.updatedAt ? campaign.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Goal</th>
                        <td>{{ campaign.goal }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ campaign.name }}</td>
                    </tr>
                    <tr>
                        <th>nombre de participant</th>
                        <td>{{ campaign.participants|length }}</td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
</div>


<a href="{{ path('app_campaign_index') }}">back to list</a>

<a href="{{ path('app_campaign_edit', {'id': campaign.id}) }}">edit</a>

